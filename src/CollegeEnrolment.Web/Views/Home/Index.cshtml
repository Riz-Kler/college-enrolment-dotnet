@{
    ViewData["Title"] = "Home";
}

<div class="ce-surface p-4 p-md-5 mt-4">
    <div class="ce-surface-header">
        <h1 class="display-6 mb-2">College Enrolment</h1>
        <p class="ce-muted mb-4">
            Demo app for student registration, enrolments, reporting, and audit logging.
        </p>
    </div>

    <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-primary" asp-controller="Students" asp-action="Index">Students</a>
        <a class="btn btn-outline-light" asp-controller="Enrolments" asp-action="Index">Enrolments</a>
        <a class="btn btn-outline-light" asp-controller="Reports" asp-action="CourseCapacity">Reports</a>
        <a class="btn btn-outline-light" asp-controller="Audit" asp-action="Index">Audit</a>
    </div>

    <hr class="my-4" style="border-color: rgba(255,255,255,0.12);" />

    <div class="ce-muted">
        <strong>Demo flow:</strong> Add a student → create an enrolment → view capacity report → review audit trail.
    </div>
</div>
